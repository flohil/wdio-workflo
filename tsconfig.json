{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": false,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": true,
        "outDir": "./dist"
    },
    "include": [
        "index.d.ts",
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ],
    "typedocOptions": {
        "mode": "file",
        "out": "./apiDoc",
        "theme": "default",
        "excludeNotExported": false,
        "excludePrivate": false,
        "excludeProtected": false,
        "excludeExternals": true,
        "target": "ES6",
        "module": "commonjs",
        "moduleResolution": "node",
        "preserveConstEnums": true,
        "stripInternal": true,
        "suppressExcessPropertyErrors": true,
        "suppressImplicitAnyIndexErrors": true,
        "exclude": [
            "**/cli.ts",
            "**/api.ts",
            "**/allureReport.ts",
            "**/inject.ts",
            "**/io.ts",
            "**/jasmineMatchers.ts",
            "**/Kiwi.ts",
            "**/matchers.ts",
            "**/parser.ts",
            "**/utility_functions/*.ts"
        ]
    }
}